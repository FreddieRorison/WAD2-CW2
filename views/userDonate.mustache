<!doctype html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body class="vh-100">
    {{>navbar}}
    {{>sidebar}}

      <div class="container mt-5">
        <div class="container pt-5">
            <h1 class="display-6 mt-5 mb-5">Donate</h1>
            <form action="/donate" method="POST">
                <label for="type" class="form-label">Type</label>
                <select name="type" class="form-select mb-3" aria-label="Select Type" required>
                    {{#types}}
                      <option value="{{_id}}">{{name}}</option>
                    {{/types}}
                  </select>
                <div class="mb-3">
                    <label for="Qauntity" class="form-label">Qauntity</label>
                    <input type="number" class="form-control mb-3" id="Qauntity" placeholder="Qauntity" required>
                </div>
                <div class="mb-3">
                    <label for="harvestDate" class="form-label">Harvest Date</label>
                    <input type="date" class="form-control mb-3" id="harvestDate" placeholder="Harvest Date" required>
                </div>
                <label for="pantry" class="form-label">Preferred Pantry</label>
                <select name="pantry" class="form-select mb-3" aria-label="Preferred Pantry" required>
                    <option value="1">Any</option>
                {{#pantries}}
                    <option value="{{_id}}">{{name}}</option>
                {{/pantries}}
                  </select>
                <button type="submit" class="btn btn-primary mt-3 float-end">Submit</button>
            </form>
        </div>
      </div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
