<!doctype html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body class="vh-100">
    {{>navbar}}
    {{>adminSidebar}}
      <div class="container mt-5">
        <div class="container pt-5">
            <h1 class="display-6 mt-5 mb-5">Add New Type</h1>
            <form action="/addType" method="POST">
            <div class="form-group">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control mb-3" name="name" placeholder="Enter Name" required>
                </div>
                <div class="form-group">
                    <label for="daterange" class="form-label">Days Until Out Of Date (0 for Non Perishable)</label>
                    <input type="number" class="form-control mb-3" name="daterange" placeholder="0" required>
                </div>
                <button type="submit" class="btn btn-primary mt-3 float-end">Submit</button>
            </form>
        </div>
      </div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
