<!doctype html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body class="">
    {{>navbar}}
    {{>adminSidebar}}
    

      <div class="container mt-5">
        <div class="container">
            <h1 class="display-6 pt-5">Pantry Users</h1>
            <a href="/adminAddType"><button type="button" class="btn btn-success ms-2">Add New User</button></a>
            <table class="table mt-5">
                <tbody>
                    <thead>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Perishable</th>
                        <th scope="col">Days Until Out Of Date</th>
                        <th scope="col"></th>
                    </thead>
                    <tbody>
                    {{#rows}}
                        <tr>
                            <td>{{_id}}</td>
                            <td>{{name}}</td>
                            <td>{{perishable}}</td>
                            <td>{{daterange}}</td>
                            <td><form method="POST" action="/deleteType"><button type="submit" name="choice" value="{{_id}}" class="btn btn-danger ms-2">Delete</button></form></td>
                        </tr>
                    {{/rows}}
                    </tbody>
                </tbody>
            </table>
        </div>
      </div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
