<!doctype html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body class="">
    {{>navbar}}
    {{>pantrySidebar}}

      <div class="container mt-5">
        <div class="container">
            <h1 class="display-6 pt-5">Incoming Deliveries</h1>
            <table class="table mt-5">
                <tbody>
                    <thead>
                        <th scope="col">#</th>
                        <th scope="col">Type</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Use By</th>
                        <th scope="col"></th>
                    </thead>
                    <tbody>
                    {{#rows}}
                        <tr>
                            <td>{{_id}}</td>
                            <td>{{type}}</td>
                            <td>{{quantity}}</td>
                            <td>{{useby}}</td>
                            <td><form method="POST" action="/confirmDelivery"><button type="submit" name="id" value="{{_id}}" class="btn btn-success">Confirm Delivery</button></form></td>
                        </tr>
                    {{/rows}}
                    </tbody>
                </tbody>
            </table>
        </div>
      </div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
